<!DOCTYPE html>
<html lang="en">
    {{> header}}

    <body>
        {{> navbar}}
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2">
                    {{> sidebar}}
                </div>
                <div class="col-sm-10">
                    <div class="container mt-2">
                        <div class="card-deck">
                            {{#each options}}
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{this}}<a href="/{{this}}" class="float-right">
                                            <svg class="bi bi-arrow-right-short" width="1em" height="1em"
                                                viewBox="0 0 16 16" fill="currentColor"
                                                xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd"
                                                    d="M8.146 4.646a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.793 8 8.146 5.354a.5.5 0 0 1 0-.708z" />
                                                <path fill-rule="evenodd"
                                                    d="M4 8a.5.5 0 0 1 .5-.5H11a.5.5 0 0 1 0 1H4.5A.5.5 0 0 1 4 8z" />
                                            </svg>
                                        </a>
                                    </h5>
                                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                </div>
                            </div>
                            {{/each}}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    {{> footer}}

</html>